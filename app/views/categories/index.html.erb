<h1 class="text-center pt-4">All Categories</h1>
<div class="flickr_pagination">
  <%= will_paginate @categories, :container => false %>
</div>

<div class="container">
  <% @categories.each do |categoria| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header">
            <h3><%= link_to categoria.name, category_path(categoria), class: "text-decoration-none text-success" %> </h3>
          </div>

          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(categoria.created_at) %> ago,
              edited <%= time_ago_in_words(categoria.updated_at) %> ago
            </small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>


<div class="flickr_pagination mb-5">
  <%= will_paginate @categories, :container => false %>
</div>
<div class="mb-5">
  <%= link_to 'Create new Article', new_article_path%>
</div>


